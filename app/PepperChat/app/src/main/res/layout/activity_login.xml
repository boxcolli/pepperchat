<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_pepper">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/nickname_room"
        app:layout_constraintBottom_toTopOf="@id/nickname_room"
        android:text="PepperChat"
        android:textColor="@color/white"
        android:paddingBottom="15dp"
        android:textSize="25sp"
        android:fontFamily="@font/nanum_square_seo_bd"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:id="@+id/nickname_room">
        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_rect"
            android:hint="nickname"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/nanum_square_seo_rg"
            android:textColor="@color/gray"
            android:layout_marginBottom="10dp"
            android:id="@+id/input_nickname"
            android:textColorHint="@color/light_gray"
            android:maxLength="20"
            android:singleLine="true"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_rect"
            android:hint="room"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/nanum_square_seo_rg"
            android:textColor="@color/gray"
            android:id="@+id/input_room"
            android:textColorHint="@color/light_gray"
            android:singleLine="true"
            android:maxLength="20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/nickname_room"
        app:layout_constraintTop_toBottomOf="@id/nickname_room"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_square_seo_rg"
            android:textSize="15sp"
            android:id="@+id/button_join"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>