<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/my_chat">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_cloud"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec lobortis dolor orci, vel condimentum lectus iaculis sit amet. Curabitur fermentum dui nisl, et sollicitudin justo imperdiet venenatis."
            android:textColor="@color/gray"
            android:paddingVertical="12dp"
            android:paddingHorizontal="20dp"
            android:layout_marginRight="10dp"
            app:layout_constraintWidth_max="300dp"
            android:fontFamily="@font/nanum_square_seo_rg"
            android:id="@+id/text_chat1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/text_chat1"
            app:layout_constraintRight_toLeftOf="@id/text_chat1"
            android:text="2023. 4. 6.\n14:52"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/nanum_square_seo_rg"
            android:textColor="@android:color/black"
            android:textSize="9sp"
            android:id="@+id/text_time1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/your_chat">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/human"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/image_human"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/your_cloud"
            app:layout_constraintLeft_toRightOf="@id/image_human"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintWidth_max="250dp"
            android:orientation="vertical"
            android:id="@+id/chat_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="woolyung"
                android:textColor="@color/dark_pepper"
                android:fontFamily="@font/nanum_square_seo_bd"
                android:id="@+id/text_sender"
                android:paddingBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec lobortis dolor orci, vel condimentum lectus iaculis sit amet. Curabitur fermentum dui nisl, et sollicitudin justo imperdiet venenatis."
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_seo_rg"
                android:id="@+id/text_chat2"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/chat_layout"
            app:layout_constraintLeft_toRightOf="@id/chat_layout"
            android:text="2023. 4. 6.\n14:52"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/nanum_square_seo_rg"
            android:textColor="@android:color/black"
            android:textSize="9sp"
            android:id="@+id/text_time2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>